/* Device Tree Overlay for enabling the pins used in wheel encoder reader
*/

/dts-v1/;
/plugin/;

/ {
   compatible = "ti,beaglebone", "ti,beaglebone-black";

   part-number = "e_reader";
   version = "00A0";

   /* This overlay uses the following resources */
   exclusive-use =
         "P9.31", "P9.30", "pru0";

   fragment@0 {
      target = <&am33xx_pinmux>;
      __overlay__ {

         pru_pru_pins: pinmux_pru_pru_pins {   // The PRU pin modes
            pinctrl-single,pins = <
               0x194 0x26  // P9_29 pr1_pru0_pru_r31_1, MODE6 | INPUT | PRU
               0x198 0x05  // P9_30 pr1_pru0_pru_r30_2, MODE5 | OUTPUT | PRU
               0x190 0x26  // P9_31 pr1_pru0_pru_r31_0, MODE6 | INPUT | PRU
            >;
         };
      };
   };

   fragment@1 {         // Enable the PRUSS
      target = <&pruss>;
      __overlay__ {
         status = "okay";
         pinctrl-names = "default";
         pinctrl-0 = <&pru_pru_pins>;
      };
   };

};
